<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Edit Detail <i class="fas fa-pen"></i></h5>
          <hr>
          <form method="POST" action="/restaurants/{{restaurant._id}}/edit">
            <div class="row mb-3 g-2">
              <label for="name" class="col-md-4 col-form-label">
                餐廳名稱（中文）
              </label>
              <div class="col-md-8">
                <input type="string" name="name" class="form-control" id="name" value="{{restaurant.name}}">
                {{!-- <small class="text-muted form-text">Length is available between 4 ~ 16</small> --}}
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="name_en" class="col-md-4 col-form-label">
                餐廳名稱（英文）
              </label>
              <div class="col-md-8">
                <input type="string" name="name_en" class="form-control" id="name_en" value="{{restaurant.name_en}}">
                {{!-- <small class="text-muted form-text">Length is available between 4 ~ 16</small> --}}
              </div>
            </div>
            
           <div class="row mb-3 g-2">
              <label for="category" class="col-md-4 col-form-label">
                類型
              </label>
              <div class="col-md-8">
                <input type="string" name="category" class="form-control" id="category"  value="{{restaurant.category}}">
                {{!-- <small class="text-muted form-text">Length is available between 4 ~ 16</small> --}}
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="image" class="col-md-4 col-form-label">
                照片
              </label>
              <div class="col-md-8">
                <textarea type="string" name="image" class="form-control" id="image" rows="2">{{restaurant.image}}</textarea>
                {{!-- <small class="text-muted form-text">Length is available between 4 ~ 16</small> --}}
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="location" class="col-md-4 col-form-label">
                地址
              </label>
              <div class="col-md-8">
                <input type="string" name="location" class="form-control" id="location" value="{{restaurant.location}}">
                {{!-- <small class="text-muted form-text">Length is available between 4 ~ 16</small> --}}
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="phone" class="col-md-4 col-form-label">
                電話
              </label>
              <div class="col-md-8">
                <input type="string" name="phone" class="form-control" id="phone" value="{{restaurant.phone}}">
                {{!-- <small class="text-muted form-text">Length is available between 4 ~ 16</small> --}}
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="google_map" class="col-md-4 col-form-label">
                Google地圖
              </label>
              <div class="col-md-8">
                <input type="string" name="google_map" class="form-control" id="google_map" value="{{restaurant.google_map}}">
                {{!-- <small class="text-muted form-text">Length is available between 4 ~ 16</small> --}}
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="name-en" class="col-md-4 col-form-label">
                評分
              </label>
              <div class="col-md-8">
                <input type="number" name="rating" class="form-control" id="rating" min="0" max="5" step="0.1" value="{{restaurant.rating}}">
                {{!-- <small class="text-muted form-text">Length is available between 4 ~ 16</small> --}}
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="description" class="col-md-4 col-form-label">
                簡介
              </label>
              <div class="col-md-8">
                <textarea type="string" name="description" class="form-control" id="description" rows="5">{{restaurant.description}}</textarea>
                {{!-- <small class="text-muted form-text">Length is available between 4 ~ 16</small> --}}
              </div>
            </div>

            {{!-- <div class="row g-2 mb-3">
              <label for="exclude-characters" class="col-md-4 col-form-label">
                Exclude Characters
              </label>
              <div class="col-md-8">
                <input type="text" name="excludeCharacters" class="form-control" id="exclude-characters">
                <small class="text-muted form-text">These characters will not appear in the password</small>
              </div>
            </div> --}}
            <div class= "d-flex justify-content-end">
              <a class="btn btn-primary mx-2" href="/" role="button">Cancel</a>
              <button class="btn btn-success" type="submit">Save</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>